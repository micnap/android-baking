<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ingredients_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_recipe"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_logo"
            android:paddingStart="10dp"/>

        <TextView
            android:id="@+id/recipe_widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textColor="@color/recipe_card_bg"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </LinearLayout>


    <ListView
        android:id="@+id/ingredients_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

    </ListView>

    <TextView
        android:id="@+id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_ingredients"
        android:layout_margin="10dp"/>


</LinearLayout>